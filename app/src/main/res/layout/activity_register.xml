<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/page_bg"
    tools:context=".activities.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="59dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/header_lottie"
            android:layout_width="0dp"
            android:layout_height="323dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_rawRes="@raw/animation_lokazr40"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="63dp"
            android:layout_height="62dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary__color"
            app:tint="@color/white"
            android:contentDescription="a"
            android:clipToOutline="true"
            android:elevation="10dp"
            android:src="@drawable/arrow_back"
            app:fabCustomSize="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/fab_3_rounded" />

        <TextView
            android:id="@+id/heading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Sign Up"
            android:textSize="30dp"
            android:textStyle="bold"
            style="@style/text__color"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_lottie" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/heading_text">

            <FrameLayout
                android:id="@+id/layoutImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/background_image"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"/>
                <TextView
                    android:id="@+id/textAddImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Image"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>
            </FrameLayout>
            <EditText
                android:id="@+id/email"
                style="@style/input__bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:fontFamily="@font/nunito_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="24.5dp"
                android:paddingVertical="12.5dp"
                android:textColorHint="@color/primary__color"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/fullName"
                style="@style/input__bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:fontFamily="@font/nunito_regular"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="24.5dp"
                android:paddingVertical="12.5dp"
                android:textColorHint="@color/primary__color"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/nickName"
                style="@style/input__bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:fontFamily="@font/nunito_regular"
                android:hint="Nick Name"
                android:inputType="text"
                android:paddingHorizontal="24.5dp"
                android:paddingVertical="12.5dp"
                android:textColorHint="@color/primary__color"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/phoneNumber"
                style="@style/input__bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:fontFamily="@font/nunito_regular"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingHorizontal="24.5dp"
                android:paddingVertical="12.5dp"
                android:textColorHint="@color/primary__color"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/password"
                style="@style/input__bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:fontFamily="@font/nunito_regular"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingHorizontal="24.5dp"
                android:paddingVertical="12.5dp"
                android:textColorHint="@color/primary__color"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/passwordConfirm"
                style="@style/input__bg"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                android:fontFamily="@font/nunito_regular"
                android:hint="Password Confirm"
                android:inputType="textPassword"
                android:paddingHorizontal="24.5dp"
                android:paddingVertical="12.5dp"
                android:textColorHint="@color/primary__color"
                android:textSize="16dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">
                <Button
                    android:id="@+id/sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/primary__color"
                    android:clipToOutline="true"
                    android:elevation="10dp"
                    android:fontFamily="@font/nunito_medium"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Already have an account?"
                android:textColor="#7A7A7A"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text=" Sign in"
                style="@style/text__color"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
