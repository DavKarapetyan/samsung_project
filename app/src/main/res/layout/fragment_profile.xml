<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/page_bg"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="63dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/primary__color"
                    android:clipToOutline="true"
                    android:contentDescription="a"
                    android:elevation="10dp"
                    android:src="@drawable/filter"
                    app:fabCustomSize="63dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/fab_3_rounded"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/img7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/start"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/primary__color"
                    android:clipToOutline="true"
                    android:fontFamily="@font/nunito_medium"
                    android:paddingVertical="0dp"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Davit Karapetyan"
                    android:textColor="@color/primary__color"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="DavKarapetyan"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_mode"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:divider="@drawable/empty_tall_divider"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="9"
                        style="@style/text__color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Posts"
                        style="@style/text__color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="128"
                        style="@style/text__color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Following"
                        style="@style/text__color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="128"
                        style="@style/text__color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Followers"
                        style="@style/text__color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Posts"
                style="@style/text__color"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:paddingHorizontal="20dp"
                android:useDefaultMargins="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/active_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_medium"
                        android:text="+"
                        android:textColor="@color/primary__color"
                        android:textSize="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>