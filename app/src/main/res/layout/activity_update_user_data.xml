<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateUserDataActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/nunito_regular"
        android:text="Update Profile"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"/>
    <FrameLayout
        android:id="@+id/layoutImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProfile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/background_image"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/textAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Image"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"/>
    </FrameLayout>
    <EditText
        android:id="@+id/name"
        style="@style/input__bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="25dp"
        android:clipToPadding="false"
        android:fontFamily="@font/nunito_regular"
        android:hint="Name"
        android:inputType="text"
        android:paddingHorizontal="@dimen/_12ssp"
        android:paddingVertical="12.5dp"
        android:textColorHint="@color/primary__color"
        android:textSize="@dimen/_11ssp" />
    <EditText
        android:id="@+id/nickName"
        style="@style/input__bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="25dp"
        android:clipToPadding="false"
        android:fontFamily="@font/nunito_regular"
        android:hint="Nick Name"
        android:inputType="text"
        android:paddingHorizontal="@dimen/_12ssp"
        android:paddingVertical="12.5dp"
        android:textColorHint="@color/primary__color"
        android:textSize="@dimen/_11ssp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary__color"
            android:clipToOutline="true"
            android:elevation="10dp"
            android:fontFamily="@font/nunito_medium"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>